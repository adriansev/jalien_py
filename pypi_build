#!/usr/bin/env bash

[[ ! -e alienpy/alien.py ]] && { echo "alien.py was not found"; exit 1; }

./update_version
git commit -m "alien.py update version info" alienpy/alien.py alienpy/VERSION
git push
git push xjalienfs master

git tag $(< alienpy/VERSION)
git push --tags
git push --tags xjalienfs master

#tag=$(git describe --tags --abbrev=0 --exact-match)

mkdir -p dist
#rm -rf dist/*
python3 -m build --sdist --wheel

echo "# Now, for pypi publishing one can do either:
twine upload --verbose dist/*
# or for testing pypi
twine upload --repository testpypi --verbose dist/*"

