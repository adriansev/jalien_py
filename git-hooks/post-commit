#!/usr/bin/env bash

REPO="$(git rev-parse --show-toplevel)"

if [ -e ${REPO}/.commit ]; then
    rm ${REPO}/.commit
    ALIENPY_IS_CHANGED=$(git status -s ${REPO}/alienpy/alien.py)
    if [ -n "${ALIENPY_IS_CHANGED}" ]; then
        ${REPO}/update_version
        git add ${REPO}/alienpy/alien.py
        git commit --amend -C HEAD --no-verify
    fi
fi


